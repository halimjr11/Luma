<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission
        android:name="android.permission.READ_MEDIA_IMAGES"
        tools:ignore="PhotoAndVideoPolicy" />
    <uses-permission android:name="android.permission.READ_MEDIA_VISUAL_USER_SELECTED" />

    <application
        android:name=".LumaApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_luma"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_luma_foreground"
        android:supportsRtl="true"
        android:theme="@style/Theme.Luma"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".view.feature.settings.SettingsActivity"
            android:exported="false" />
        <activity
            android:name=".view.feature.create.CreateActivity"
            android:exported="false" />
        <activity
            android:name=".view.feature.auth.AuthActivity"
            android:exported="false" />
        <activity
            android:name=".view.feature.main.MainActivity"
            android:exported="false" />
        <activity
            android:name=".view.feature.splash.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>